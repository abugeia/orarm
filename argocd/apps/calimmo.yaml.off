apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: calimmo
  namespace: argocd
spec:
  project: default
  source:
    repoURL: 'https://github.com/abugeia/orarm.git'
    path: 'apps/calimmo' 
    targetRevision: HEAD

  destination:
    server: 'https://kubernetes.default.svc'
    namespace: calimmo

  syncPolicy:
    automated:
      prune: true
      selfHeal: true
